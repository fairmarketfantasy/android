<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/app_action_bar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/app_action_bar</item>

    </style>

    <style name="app_action_bar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/action_bar_background</item>
        <item name="titleTextStyle">@style/title_style</item>
        <item name="icon">@android:color/transparent</item>

        <item name="android:background">@color/action_bar_background</item>
        <item name="android:titleTextStyle">@style/title_style</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="AppIconTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/app_icon_action_bar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/app_icon_action_bar</item>

    </style>
    <style name="title_style" parent="@android:style/Widget.TextView">
        <item name="android:text"></item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="app_icon_action_bar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/action_bar_background</item>
        <item name="android:background">@color/action_bar_background</item>

    </style>

    <style name="green_auth_button" parent="@android:style/Widget.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_height">@dimen/auth_button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/auth_button_text_size</item>
        <item name="android:layout_marginTop">@dimen/auth_element_top_margin</item>
        <item name="android:background">@drawable/grean_button</item>
    </style>

    <style name="blue_auth_button" parent="green_auth_button">
        <item name="android:background">@drawable/blue_button</item>
    </style>

    <style name="auth_edit_text" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/white_edit_text</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginTop">@dimen/auth_element_top_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/auth_edit_text_height</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/auth_edit_text_text_size</item>
    </style>

    <style name="update_user_edit_text" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/white_edit_text</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/auth_edit_text_height</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/auth_edit_text_text_size</item>
        <item name="android:paddingLeft">@dimen/side_marging</item>
        <item name="android:paddingRight">@dimen/side_marging</item>
    </style>



</resources>
