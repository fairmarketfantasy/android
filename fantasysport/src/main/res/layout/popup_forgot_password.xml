<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/side_marging"
        android:paddingLeft="@dimen/side_marging"
        android:background="#aa000000">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_gravity="center"
              android:layout_height="wrap_content"
              android:background="@drawable/white_round">

    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content"

                 android:paddingRight="@dimen/side_marging"
                 android:paddingLeft="@dimen/side_marging"
           >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/forgot_pwd_lbl"
                  android:text="FORGOT PASSWORD"
                  android:textSize="@dimen/x_medium_font"
                  android:layout_gravity="clip_vertical|left"
                  android:paddingBottom="@dimen/side_hor_marging"
                  android:paddingTop="@dimen/side_marging"
                />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Ã—"
                android:textSize="@dimen/lage_font"
                android:layout_gravity="top|right"
                android:layout_marginTop="10dp"
                android:id="@+id/cancel_btn"/>

    </FrameLayout>
    <View android:layout_width="match_parent"
          android:layout_height="1dip"
          android:background="#E6E6E6"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/forgot_pwd_lbl"
              android:text="Enter your email address for instructions."
              android:layout_gravity="center_vertical|left"
              android:paddingTop="@dimen/side_hor_marging"
              android:paddingLeft="@dimen/side_marging"
              android:paddingRight="@dimen/side_marging"
              android:paddingBottom="@dimen/side_hor_marging"
            />

    <EditText android:id="@+id/email_txt"
              android:inputType="textEmailAddress"
              android:hint="@string/email"
              android:paddingLeft="5dp"
              android:layout_marginLeft="@dimen/side_marging"
              android:layout_marginRight="@dimen/side_marging"
              android:layout_marginBottom="@dimen/side_marging"
              style="@style/auth_edit_text"
              android:background="@drawable/edit_text_gray_border"
            />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/error_lbl"
              android:text="@string/please_provide_valid_email"
              android:layout_gravity="center_vertical|left"
              android:paddingLeft="@dimen/side_marging"
              android:paddingRight="@dimen/side_marging"
              android:textColor="#FF0000"
              android:visibility="invisible"
            />

    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                 android:paddingBottom="@dimen/side_marging"
                 android:paddingTop="@dimen/side_marging"
                 android:paddingRight="@dimen/side_marging"
                 android:paddingLeft="@dimen/side_marging"
                 android:background="@drawable/gray_bottom_round"
                 android:layout_marginTop="@dimen/side_marging"
            >
        <Button android:layout_width="wrap_content"
                android:layout_height="@dimen/submit_btn_height"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/green_button"
                android:text="SEND INSTRUCTIONS"
                android:paddingRight="@dimen/btn_padding"
                android:paddingLeft="@dimen/btn_padding"
                android:textColor="#ffffff"
                android:id="@+id/submit_btn"
                android:textSize="@dimen/x_medium_font"
                />
            </FrameLayout>



</LinearLayout>

</FrameLayout>