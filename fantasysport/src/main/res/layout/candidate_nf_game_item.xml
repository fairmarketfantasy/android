<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="@dimen/side_hor_margin"
              android:paddingTop="@dimen/side_hor_margin"
              android:background="#F0F0F0">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <FrameLayout android:layout_height="@dimen/avatar_side" android:layout_width="match_parent"
                     android:id="@+id/add_home_btn"
                     android:background="#F0F0F0"
                     android:paddingLeft="8dp"
                     android:paddingRight="7dp">

            <ImageView android:layout_gravity="center" android:src="@drawable/plus"
                       android:id="@+id/add_home_img"
                       android:layout_height="wrap_content" android:layout_width="wrap_content"
                    />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical">
        <com.fantasysport.views.RoundedImageView android:id="@+id/home_team_img" android:layout_gravity="center"
                                                 android:layout_width="@dimen/avatar_side"
                                                 android:layout_height="@dimen/avatar_side"
                                                 android:scaleType="fitCenter"
                                                 android:adjustViewBounds="true"
                                                 android:src="@drawable/circle_2"/>
        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
                  android:layout_gravity="center"
                  android:id="@+id/home_team_lbl"
                  android:textSize="@dimen/low_font"
                />
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
            android:orientation="vertical">
        <FrameLayout android:layout_width="wrap_content" android:layout_height="@dimen/avatar_side">

            <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content"
                          android:orientation="horizontal"
                          android:layout_gravity="center">
                <com.fantasysport.views.ExButton
                        android:layout_width="50dp"
                        android:layout_height="@dimen/btn_height"
                        android:id="@+id/home_team_pt_btn"
                        android:background="@drawable/left_pt_button"
                        custom:fontFamily="prohibitionRound"
                        android:textSize="@dimen/x_medium_font"
                        android:textColor="@color/pt_button_text_color"/>
                <View android:layout_width="2dp" android:layout_height="match_parent" android:background="@color/app_blue"
                      android:id="@+id/separator_view"/>
                <com.fantasysport.views.ExButton
                        android:layout_width="50dp"
                        android:layout_height="@dimen/btn_height"
                        android:id="@+id/away_team_pt_btn"
                        android:background="@drawable/right_pt_button"
                        custom:fontFamily="prohibitionRound"
                        android:textSize="@dimen/x_medium_font"
                        android:textColor="@color/pt_button_text_color"
                        android:src="@drawable/circle_2"/>
            </LinearLayout>

        </FrameLayout>


        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
                  android:layout_gravity="center"
                  android:id="@+id/game_time_lbl"
                  android:textSize="@dimen/low_font"
                  android:textColor="#A0A0A0"
                />
    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical">
        <com.fantasysport.views.RoundedImageView android:id="@+id/away_team_img"
                                                 android:layout_gravity="center"
                                                 android:background="@android:color/transparent"
                                                 android:adjustViewBounds="true"
                                                 android:scaleType="fitCenter"
                                                 android:src="@drawable/circle_2"
                                                 android:layout_width="@dimen/avatar_side"
                                                 android:layout_height="@dimen/avatar_side"

                />

        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
                  android:layout_gravity="center"
                  android:id="@+id/away_team_lbl"
                  android:textSize="@dimen/low_font"
                />
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <FrameLayout android:layout_height="@dimen/avatar_side" android:layout_width="match_parent"
                     android:id="@+id/add_away_btn"
                     android:background="#F0F0F0"
                     android:paddingLeft="7dp"
                     android:paddingRight="8dp">

            <ImageView android:layout_gravity="center" android:src="@drawable/plus"
                       android:id="@+id/add_away_img"
                       android:layout_height="wrap_content" android:layout_width="wrap_content"
                    />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
