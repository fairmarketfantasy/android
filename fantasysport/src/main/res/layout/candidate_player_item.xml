<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingRight="@dimen/side_margin"
              android:paddingLeft="@dimen/side_margin"
              android:background="#F0F0F0"
        >
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:paddingBottom="@dimen/side_hor_margin"
                  android:paddingTop="@dimen/side_hor_margin">
        <FrameLayout android:layout_width="58dp" android:layout_height="58dp"
                     android:layout_marginRight="10dp"
                     android:layout_gravity="center"
                >

            <ImageView android:layout_width="56dp"
                       android:layout_height="56dp"
                       android:layout_gravity="center"
                       android:src="@drawable/tshirt"
                    />
            <ImageView android:layout_width="56dp"
                       android:layout_height="56dp"
                       android:layout_gravity="center"
                       android:id="@+id/player_img"
                       android:scaleType="centerCrop"
                    />
            <ImageView android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:src="@drawable/circle_2"
                       android:id="@+id/circle_img"
                    />
            <ImageView android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:src="@drawable/benched"
                       android:id="@+id/benched_img"
                    />
        </FrameLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:orientation="vertical">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/name_lbl"
                      android:textColor="#333333"
                      android:textSize="@dimen/medium_font"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/position_lbl"
                      android:textColor="#999999"
                      android:textSize="@dimen/medium_font"
                    />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/buy_price_lbl"
                      android:textColor="#000000"
                      android:textSize="@dimen/medium_font"
                      android:textStyle="bold"
                    />
        </LinearLayout>

        <com.fantasysport.views.ExButton android:layout_width="38dp"
                android:layout_height="@dimen/btn_height"
                android:layout_marginRight="5dp"
                android:id="@+id/pt25_btn"
                android:background="@drawable/pt25_button"
                android:textSize="@dimen/x_medium_font"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:textColor="@color/app_blue"
                android:text="PT"
                custom:fontFamily="prohibitionRound"/>

        <com.fantasysport.views.ExButton android:layout_width="48dp"
                android:layout_height="@dimen/btn_height"
                android:id="@+id/add_btn"
                android:background="@drawable/add_button"
                android:textSize="@dimen/x_medium_font"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:text="@string/add"
                custom:fontFamily="prohibitionRound"/>
    </LinearLayout>
</LinearLayout>