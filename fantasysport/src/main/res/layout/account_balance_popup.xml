<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingRight="@dimen/side_marging"
             android:paddingLeft="@dimen/side_marging"
             android:background="#aa000000">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_gravity="center"
                  android:layout_height="wrap_content"
                  android:background="@drawable/white_round">

        <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content"

                     android:paddingRight="@dimen/side_marging"
                     android:paddingLeft="@dimen/side_marging"
                >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/title_lbl"
                      android:text="ACCOUNT BALANCE"
                      android:textSize="@dimen/s_lage_font"
                      android:layout_gravity="clip_vertical|left"
                      android:paddingBottom="@dimen/side_hor_marging"
                      android:paddingTop="@dimen/side_marging"
                    />

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="right"
                      android:id="@+id/balance_lbl"
                      android:text="$100500.00"
                      android:textColor="@color/app_green"
                      android:textSize="@dimen/s_lage_font"
                      android:layout_gravity="clip_vertical|left"
                      android:paddingBottom="@dimen/side_hor_marging"
                      android:paddingTop="@dimen/side_marging"
                    />

        </FrameLayout>
        <View android:layout_width="match_parent"
              android:layout_height="1dip"
              android:background="#E6E6E6"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/this_month_lbl"
                  android:text="YOUR ACCOUNT THIS MONTH"
                  android:textSize="@dimen/x_medium_font"
                  android:layout_gravity="center_vertical|left"
                  android:paddingTop="@dimen/side_hor_marging"
                  android:paddingLeft="@dimen/side_marging"
                  android:paddingRight="@dimen/side_marging"
                  android:paddingBottom="@dimen/side_hor_marging"
                />

        <TableLayout android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:paddingLeft="@dimen/side_marging"
                     android:stretchColumns="2,5"
                >

            <TableRow>
                <View android:layout_height="5dp" android:layout_width="5dp"
                      android:background="@drawable/circle_bg"
                      android:layout_gravity="center_vertical"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="FanBuks"
                          android:textColor="#9F9F9F"
                          android:textSize="@dimen/low_font"
                          android:paddingLeft="5dp"
                          android:paddingRight="5dp"
                        />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="0.00"
                          android:textColor="#000000"
                          android:textSize="@dimen/low_font"
                          android:paddingRight="5dp"
                          android:id="@+id/funbucks_lbl"
                        />
                <View android:layout_height="5dp" android:layout_width="5dp"
                      android:background="@drawable/circle_bg"
                      android:layout_gravity="center_vertical"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Predictions"
                          android:textColor="#9F9F9F"
                          android:textSize="@dimen/low_font"
                          android:paddingLeft="5dp"
                          android:paddingRight="5dp"
                        />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="10500"
                          android:textColor="#000000"
                          android:textSize="@dimen/low_font"
                          android:id="@+id/prediction_lbl"
                        />
            </TableRow>

            <TableRow>
                <View android:layout_height="5dp" android:layout_width="5dp"
                      android:background="@drawable/circle_bg"
                      android:layout_gravity="center_vertical"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Awards"
                          android:textColor="#9F9F9F"
                          android:textSize="@dimen/low_font"
                          android:paddingLeft="5dp"
                          android:paddingRight="5dp"
                        />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="0.00"
                          android:textColor="#000000"
                          android:textSize="@dimen/low_font"
                          android:paddingRight="5dp"
                          android:id="@+id/award_lbl"
                        />
                <View android:layout_height="5dp" android:layout_width="5dp"
                      android:background="@drawable/circle_bg"
                      android:layout_gravity="center_vertical"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Winnings Multiplier"
                          android:textColor="#9F9F9F"
                          android:textSize="@dimen/low_font"
                          android:paddingLeft="5dp"
                          android:paddingRight="5dp"
                        />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="0.0"
                          android:textColor="#000000"
                          android:textSize="@dimen/low_font"
                          android:id="@+id/multiplier_lbl"
                        />
            </TableRow>

        </TableLayout>



        <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                     android:paddingBottom="@dimen/side_marging"
                     android:paddingTop="@dimen/side_marging"
                     android:paddingRight="@dimen/side_marging"
                     android:paddingLeft="@dimen/side_marging"
                     android:background="@drawable/gray_bottom_round"
                     android:layout_marginTop="@dimen/side_marging"
                >
            <Button android:layout_width="wrap_content"
                    android:layout_height="@dimen/submit_btn_height"
                    android:layout_gravity="right"
                    android:background="@drawable/autofill_button"
                    android:text="CLOSE"
                    android:paddingRight="@dimen/btn_padding"
                    android:paddingLeft="@dimen/btn_padding"
                    android:textColor="#ffffff"
                    android:id="@+id/close_btn"
                    android:textSize="@dimen/x_medium_font"
                    />
        </FrameLayout>



    </LinearLayout>

</FrameLayout>