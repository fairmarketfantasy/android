<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#F0F0F0"
              android:paddingBottom="@dimen/side_marging"
              android:paddingTop="@dimen/side_hor_marging"
              android:paddingLeft="@dimen/side_marging"
              android:paddingRight="@dimen/side_marging"
              android:id="@+id/root"
        >

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingBottom="@dimen/side_marging"
            >

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:orientation="vertical"
                >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/name_lbl"
                      android:textColor="#000000"
                      android:text="Cavaliers@Bobcats"
                      android:textSize="@dimen/x_medium_font"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/contest_type_lbl"
                      android:textColor="#000000"

                      android:textSize="@dimen/x_medium_font"
                      android:text="27 H2H"
                    />


        </LinearLayout>

        <com.fantasysport.views.ExButton android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:paddingRight="@dimen/btn_padding"
                android:paddingLeft="@dimen/btn_padding"
                android:background="@drawable/autofill_button"
                android:text="ROSTER"
                android:id="@+id/roster_btn"
                custom:fontFamily="prohibitionRound"
                />

    </LinearLayout>

    <TableLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:stretchColumns="2,5"
        >

        <TableRow>
            <View android:layout_height="5dp" android:layout_width="5dp"
                    android:background="@drawable/circle_bg"
                    android:layout_gravity="center_vertical"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Day"
                      android:textColor="#9F9F9F"
                      android:textSize="@dimen/low_font"

                      android:paddingLeft="5dp"
                      android:paddingRight="5dp"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Fri Mar 07"
                      android:textColor="#000000"
                      android:textSize="@dimen/low_font"
                      android:paddingRight="5dp"
                      android:id="@+id/day_lbl"
                    />
            <View android:layout_height="5dp" android:layout_width="5dp"
                  android:background="@drawable/circle_bg"
                  android:layout_gravity="center_vertical"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Game Time"
                      android:textColor="#9F9F9F"
                      android:textSize="@dimen/low_font"
                      android:paddingLeft="5dp"
                      android:paddingRight="5dp"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="01:00am"
                      android:textColor="#000000"
                      android:textSize="@dimen/low_font"
                      android:id="@+id/game_time_lbl"
                    />
        </TableRow>

        <TableRow>
            <View android:layout_height="5dp" android:layout_width="5dp"
                  android:background="@drawable/circle_bg"
                  android:layout_gravity="center_vertical"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="State"
                      android:textColor="#9F9F9F"
                      android:textSize="@dimen/low_font"
                      android:paddingLeft="5dp"
                      android:paddingRight="5dp"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Submitted"
                      android:textColor="#000000"
                      android:textSize="@dimen/low_font"
                      android:paddingRight="5dp"
                      android:id="@+id/state_lbl"
                    />
            <View android:layout_height="5dp" android:layout_width="5dp"
                  android:background="@drawable/circle_bg"
                  android:layout_gravity="center_vertical"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Rank"
                      android:textColor="#9F9F9F"
                      android:textSize="@dimen/low_font"
                      android:paddingLeft="5dp"
                      android:paddingRight="5dp"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Not started yet"
                      android:textColor="#000000"
                      android:textSize="@dimen/low_font"
                      android:id="@+id/rank_lbl"
                    />
        </TableRow>

        <TableRow>
            <View android:layout_height="5dp" android:layout_width="5dp"
                  android:background="@drawable/circle_bg"
                  android:layout_gravity="center_vertical"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Points"
                      android:textColor="#9F9F9F"
                      android:textSize="@dimen/low_font"
                      android:paddingLeft="5dp"
                      android:paddingRight="5dp"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="N/A"
                      android:textColor="#000000"
                      android:textSize="@dimen/low_font"
                      android:id="@+id/funbucks_lbl"
                    />

            <View android:layout_height="5dp" android:layout_width="5dp"
                  android:background="@drawable/circle_bg"
                  android:layout_gravity="center_vertical"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Award"
                      android:textColor="#9F9F9F"
                      android:textSize="@dimen/low_font"
                      android:paddingLeft="5dp"
                      android:paddingRight="5dp"
                    />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="N/A"
                      android:textColor="#000000"
                      android:textSize="@dimen/low_font"
                      android:id="@+id/award_lbl"
                    />

        </TableRow>
    </TableLayout>
</LinearLayout>